@model IEnumerable<WebApplicationLibrary.Models.Publisher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Yayıncılar</h2>
 <hr />

 <p>
     @Html.ActionLink("Yeni Yayıncı", "Create", null, new { @class = "btn btn-success" }) |
     @Html.ActionLink("Ara", "Search", null, new { @class = "btn btn-primary" })
 </p>
<table class="table">
    <tr>
        <th>
           Yayınevi 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PublisherName)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.PublisherID }, new {@class="btn btn-warning"}) |
          
            @Html.ActionLink("Sil", "Delete", new { id=item.PublisherID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
