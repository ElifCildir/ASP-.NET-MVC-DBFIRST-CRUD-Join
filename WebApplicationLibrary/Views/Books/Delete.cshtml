@model WebApplicationLibrary.Models.Book


@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kitap Sil</h2>
<hr />

<h5>Bu kitabı silmek istediğinizden emin misiniz?</h5>

<div>


    <dl class="dl-horizontal">

     <dt>Kitap Adı</dt>
     <dd>@Html.DisplayFor(model=>model.BookTitle)</dd>
     <dt>Tür</dt>
     <dd>@Html.DisplayFor(model=>model.Subject)</dd>
     <dt>Basım Yılı</dt>
     <dd>@Html.DisplayFor(model=>model.YearPublished)</dd>
     <dt>Yazar Adı</dt>
     <dd>@Html.DisplayFor(model=>model.Author.AuthorNameSurname)</dd>
     <dt>Yayınevi</dt>
     <dd>@Html.DisplayFor(model=>model.Publisher.PublisherName)</dd>

    </dl>

    @using (Html.BeginForm())
    { 
    <input type="submit" value="Sil" class="btn btn-danger" />
    @Html.ActionLink("Geri Dön", "Index",null, new {@class="btn btn-secondary"})


    }

</div>