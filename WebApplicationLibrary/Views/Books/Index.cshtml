@model IEnumerable<WebApplicationLibrary.Models.Book>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kitaplar</h2>
<br />

@Html.ActionLink("Yeni Kitap", "Create", null, new { @class = "btn btn-success" })

@Html.ActionLink("Ara", "Search", null, new { @class = "btn btn-primary" })


<table class="table table-bordered">

    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Tür</th>
            <th>Basım Yılı</th>
            <th>Yazar</th>
            <th>Yayınevi</th>

        </tr>

    </thead>

    <tbody>
        @foreach (var book in Model)
        {

            <tr>

                <td>
                    @book.BookTitle
                </td>

                <td>@book.Subject</td>
                <td>@book.YearPublished</td>
                <td>@book.Author.AuthorNameSurname</td>
                <td>@book.Publisher.PublisherName</td>

                <td>

                    @Html.ActionLink("Düzenle", "Edit", new { id = book.BookID }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = book.BookID }, new { @class = "btn btn-danger" })

                </td>

            </tr>

        }



    </tbody>
</table>