@model WebApplicationLibrary.Models.Book


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kitap Düzenle</h2>
<hr />

@using (Html.BeginForm())
            {

               @Html.HiddenFor(model=> model.BookID)
     
<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(model => model.BookTitle, "Kitap Adı")
        <div class="col-md-4">
            @Html.EditorFor(model => model.BookTitle, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BookTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-gruop">
        @Html.LabelFor(model => model.Subject, "Tür")
        <div class="col-md-4">
            @Html.EditorFor(model => model.Subject, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.YearPublished, "Basım Yılı")
        <div class="col-md-4">
            @Html.EditorFor(model => model.YearPublished, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.YearPublished, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AuthorID, "Yazar Adı")
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.AuthorID, (List<SelectListItem>)ViewBag.Data)
            @Html.ValidationMessageFor(model => model.AuthorID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PublisherID, "Yayınevi")
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.PublisherID, (List<SelectListItem>)ViewBag.Data2)
            @Html.ValidationMessageFor(model => model.PublisherID, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <input type="submit" value="Kaydet" class="btn btn-success" />
    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })




</div>




            }

