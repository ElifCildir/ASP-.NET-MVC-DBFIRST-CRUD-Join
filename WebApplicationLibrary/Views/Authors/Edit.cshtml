@model WebApplicationLibrary.Models.Author


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Yazar Düzenle</h2>

@using (Html.BeginForm())
 {
    @Html.HiddenFor(model=> model.AuthorID)

<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(model => model.AuthorID, "Yazar No")
        <br />
        <div class="col-md-4">
            @Html.EditorFor(model => model.AuthorID, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AuthorID, "", new { @class = "text danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AuthorNameSurname, "Yazar Adı Soyadı")
        <br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.AuthorNameSurname, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AuthorNameSurname, "", new { @class = "text danger" })

        </div>
    </div>

    <br />



    <input type="submit" value="Kaydet" class="btn btn-success" />
    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })






</div>
















 }
